<div class="row">
    <div class="">
        <h2> Welcome, {{name}}! You are a Unicorn!</h2>
    </div>
</div>

<div>
    <div>
        <h3>Make a new post?</h3>

        <form>
            <div>
                <label>Post Title:</label>
                <input class="form-input" type="text" id="post-title"/>
            </div>
            <div>
                <label>Post Content:</label>
                <textarea class="form-input" id="post-content"></textarea>
                {{!-- add functionality to upload photos/videos. --}}
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Post It</button>
            </div>
        </form>
    </div>

    {{#if post.length}}
    <div> 
        <h3>Your Awesome Posts:</h3>
        {{#each post as |post|}}
        <div class="row">
            <div class="col"
            <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
        </div>
        <div class="col">
            <button class="btn" data-id="{{post.id}}">Git Rid of this post?</button>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="./js/profile.js"></script>

