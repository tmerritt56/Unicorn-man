<div class="container">
  <div class="row banner">
    <p>{{post.title}}</p>
    <p>Posted by {{post.user.username}} on {{format_date post.date}}</p>
  </div>
  <div class="row content-box">
    <p>{{post.content}}</p>
  </div>
</div>

<div class="container">
  <div class="row banner">
  </div>
  {{#each post.comments as |comment| }}
  <div class="row content-box comment-box">
    <p>{{comment.content}}</p>
    <p>- {{comment.user.username}}, {{format_date comment.date}}</p>
  </div>
  {{/each}}
</div>

<div class="middle">
<form class="form comment-form">
  <div>
    <label for="comment">Comment</label>
    <input type="text" name="commentContent">
    <input type="hidden" , name="post-id" value="{{post.id}}">
  </div>
  <button type="submit">Submit</button>
  </div>
</form>
</div>
<script src="/js/comment.js"></script>